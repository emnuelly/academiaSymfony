{% extends 'base.html.twig' %}
{% block title %}Alunos{% endblock %}
{% block body %}
    {% for message in app.flashes('message') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}


    <script>
        $(".alert").alert();
    </script>
    <div class="row">
        <div class="col-md-12">
            <h1>Todos os alunos</h1>
            <hr />
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Endere√ßo</th>
                        <th>CPF</th>
                        <th>Data de Nascimento</th>
                        <th>Plano</th>
                        <th>Forma de Pagamento</th>
                        <th>E-Mail</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
                <tbody>
                    {% for aluno in alunos %}
                    <tr>
                        <td>{{ aluno.id }}</td>
                        <td>{{ aluno.nome }}</td>
                        <td>{{ aluno.address }}</td>
                        <td>{{ aluno.cpf }}</td>
                        <td>{{ aluno.bdate }}</td>
                        <td>{{ aluno.plano }}</td>
                        <td>{{ aluno.payment }}</td>
                        <td>{{ aluno.email }}</td>
                        <td>{{ aluno.phone }}</td>
                        <td><a href="{{ path("edit_student", {id: aluno.id})}}"> edit </a></td>
                        <td> <a href="{{ path("delete_student", {id: aluno.id})}}"> delete </a> </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}