{% extends 'base.html.twig' %}
{% block title %}Matricula {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Editar Aluno ({{ student.nome }})</h1>
        </div>
        <form action="{{ path("form_save_edit_student") }}" method="POST">
            <input type="hidden" name="id" value="{{ student.id }}">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="nome">Nome:</label>
                    <input type="text" name="nome" id="nome" value="{{ student.nome }}" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="idade">Idade:</label>
                    <input type="number" min="14" max="70" value="{{ student.idade }}" name="idade" id="idade" class="form-control"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}